<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/assignment_item_parent">


    <RelativeLayout
        android:id="@+id/assignment_list_item_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@color/colorAccent">

        <ImageView
            android:id="@+id/assignment_delete_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_delete_white_24dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:paddingEnd="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="Delete"
            android:layout_toStartOf="@+id/assignment_delete_icon"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:textColor="@color/White"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/assignment_list_item_foreground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/White">

        <TextView
            android:id="@+id/assignment_list_name"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Some text "
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/assignment_list_date"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:text="some description"
            android:textSize="10sp"/>
    </LinearLayout>

</FrameLayout>